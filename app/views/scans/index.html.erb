<h2>My Scans</h2>

<% if @scans.blank? %>

  <p>You do not have any scan records yet.</p>

<% else %>

  <table>
    <thead>
      <tr>
        <th>Med</th>
        <th>Scanned At</th>
      </tr>
    </thead>
    <tbody>
      <% @scans.each_with_index do |scan, index| %>
        <tr<%= raw ' class="odd"' if index.odd? %>>
          <td><%= scan.med %></td>
          <td><%= date_time(scan.created_at) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>

<br>

<%= link_to 'New Scan', new_scan_path %>
